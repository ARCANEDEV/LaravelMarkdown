{
    "name":        "arcanedev/laravel-markdown",
    "description": "Markdown parsing for Laravel with blade directives",
    "keywords":    ["arcanedev", "laravel", "markdown", "parser", "parsing", "md", "blade"],
    "homepage":    "https://github.com/ARCANEDEV/LaravelMarkdown",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":               ">=7.0",
        "arcanedev/support": "~4.0",
        "erusev/parsedown":  "~1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "phpunit/phpcov":  "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\LaravelMarkdown\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\LaravelMarkdown\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.0\""
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arcanedev\\LaravelMarkdown\\LaravelMarkdownServiceProvider"
            ],
            "aliases": {
                "Markdown": "Arcanedev\\LaravelMarkdown\\Facades\\Markdown"
            }
        }
    }
}
